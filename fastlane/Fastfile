default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :test do
    run_tests(
      project: "CD starter project.xcodeproj",
      scheme: "CD starter project",
      device: "iPhone 16",
      only_testing: ["CD starter projectTests"]
    )
  end

  desc "Setup certificates and provisioning profiles using Match"
  lane :certificates do
    match(
      type: "appstore",
      app_identifier: "com.othmanshahrouri.CD-starter-project"
    )
  end

  desc "Build and upload to TestFlight"
  lane :ci_build do
    puts "ğŸ” Starting ci_build lane for TestFlight upload"
    
    # Debug environment variables
    key_id = ENV["API_KEY_ID"]
    issuer_id = ENV["API_ISSUER_ID"] 
    key_content = ENV["API_KEY_BASE64"]
    
    puts "ğŸ” Debug: key_id present: #{!key_id.nil? && !key_id.empty?}"
    puts "ğŸ” Debug: issuer_id present: #{!issuer_id.nil? && !issuer_id.empty?}"
    puts "ğŸ” Debug: key_content present: #{!key_content.nil? && !key_content.empty?}"
    
    # Setup App Store Connect API key for TestFlight upload
    if key_id && issuer_id && key_content && 
       !key_id.empty? && !issuer_id.empty? && !key_content.empty?
      
      puts "ğŸ”‘ Setting up App Store Connect API key for TestFlight..."
      begin
        app_store_connect_api_key(
          key_id: key_id,
          issuer_id: issuer_id,
          key_content: key_content,
          is_key_content_base64: true,
          duration: 1200,
          in_house: false
        )
        puts "âœ… API key setup successful"
      rescue => e
        puts "âŒ API key setup failed: #{e.message}"
        puts "âš ï¸  Cannot proceed with TestFlight upload without valid API key"
        next
      end
      
      puts "ğŸ“± Setting up certificates and provisioning profiles..."
      # Use Match to get certificates and provisioning profiles
      match(
        type: "appstore",
        app_identifier: "com.othmanshahrouri.CD-starter-project",
        readonly: true
      )
      
      puts "ğŸ—ï¸  Building for App Store distribution..."
      # Build the app for App Store distribution
      build_app(
        project: "CD starter project.xcodeproj",
        scheme: "CD starter project",
        export_method: "app-store",
        output_directory: "./build",
        output_name: "CD_starter_project",
        clean: true
      )
      
      puts "ğŸš€ Uploading to TestFlight..."
      # Upload to TestFlight
      upload_to_testflight(
        skip_waiting_for_build_processing: true,
        skip_submission: true
      )
      
      puts "âœ… Successfully uploaded to TestFlight!"
      
    else
      puts "âš ï¸  Missing API key configuration - building archive only"
      puts "ğŸ” This version creates an archive without TestFlight upload"
      
      puts "ğŸ—ï¸  Starting build process without signing..."
      # Build archive only (no signing/export)
      build_app(
        project: "CD starter project.xcodeproj", 
        scheme: "CD starter project",
        skip_codesigning: true,
        skip_package_ipa: true,
        archive_path: "./build/CD_starter_project.xcarchive",
        clean: true
      )
      
      puts "âœ… Archive build completed successfully (no signing required)!"
    end
  end
end 